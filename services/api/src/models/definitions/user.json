{
  "attributes": {
    "email": {
      "type": "String",
      "validate": "email",
      "required": true,
      "lowercase": true,
      "trim": true
    },
    "roles": [
      {
        "role": {
          "type": "String",
          "required": true
        },
        "scope": {
          "type": "String",
          "required": true
        },
        "scopeRef": {
          "type": "ObjectId",
          "ref": "Organization"
        }
      }
    ],
    "firstName": {
      "type": "String",
      "required": true,
      "trim": true
    },
    "lastName": {
      "type": "String",
      "required": true,
      "trim": true
    },
    "phoneNumber": {
      "type": "String",
      "required": true,
      "validate": "phone"
    },
    "theme": {
      "type": "String",
      "enum": [
        "dark",
        "light",
        "system"
      ]
    },
    "isDeveloper": {
      "type": "Boolean",
      "default": false
    },
    "hashedPassword": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "loginAttempts": {
      "type": "Number",
      "default": 0,
      "readScopes": "none",
      "writeScopes": "none"
    },
    "lastLoginAttemptAt": {
      "type": "Date",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "accessConfirmedAt": {
      "type": "Date",
      "writeScopes": "none"
    },
    "authInfo": [
      {
        "lastUsedAt": {
          "type": "Date",
          "required": true,
          "writeScopes": "none"
        },
        "userAgent": {
          "type": "String",
          "required": false,
          "writeScopes": "none"
        },
        "ip": {
          "type": "String",
          "required": true,
          "writeScopes": "none"
        },
        "country": {
          "type": "String",
          "writeScopes": "none"
        },
        "iat": {
          "type": "Date",
          "required": true,
          "writeScopes": "none"
        },
        "jti": {
          "type": "String",
          "required": true,
          "writeScopes": "none"
        },
        "exp": {
          "type": "Date",
          "required": true,
          "readScopes": "read",
          "writeScopes": "none"
        }
      }
    ],
    "tempTokenId": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "smsSecret": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "mfaBackupCodes": [
      {
        "type": "String",
        "readScopes": "none",
        "writeScopes": "none"
      }
    ],
    "mfaMethod": {
      "type": "String",
      "enum": [
        "sms",
        "otp"
      ]
    },
    "mfaSecret": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "mfaPhoneNumber": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    }
  },
  "search": [
    "firstName",
    "lastName",
    "email",
    "phoneNumber"
  ]
}
