{
  "attributes": {
    "firstName": {
      "type": "String",
      "required": true,
      "trim": true
    },
    "lastName": {
      "type": "String",
      "required": true,
      "trim": true
    },
    "email": {
      "type": "String",
      "validate": "email",
      "lowercase": true,
      "required": true,
      "unique": true,
      "trim": true
    },
    "phone": {
      "type": "String",
      "validate": "phone",
      "unique": true,
      "trim": true
    },
    "emailVerified": {
      "type": "Boolean",
      "default": false
    },
    "phoneVerified": {
      "type": "Boolean",
      "default": false
    },
    "deviceToken": {
      "type": "String"
    },
    "notifications": [
      {
        "name": {
          "type": "String",
          "required": true
        },
        "sms": {
          "type": "Boolean",
          "default": false
        },
        "push": {
          "type": "Boolean",
          "default": false
        },
        "email": {
          "type": "Boolean",
          "default": false
        },
        "sentCount": {
          "type": "Number",
          "default": 0,
          "readAccess": "none",
          "writeAccess": "none"
        },
        "lastSentAt": {
          "type": "Date",
          "readAccess": "none",
          "writeAccess": "none"
        }
      }
    ],
    "roles": [
      {
        "role": {
          "type": "String",
          "required": true
        },
        "scope": {
          "type": "String",
          "required": true,
          "enum": [
            "global",
            "organization"
          ]
        },
        "scopeRef": {
          "type": "ObjectId",
          "ref": "Organization"
        }
      }
    ],
    "isTester": {
      "type": "Boolean",
      "default": false
    },
    "$private": {
      "type": "Scope",
      "readAccess": "self",
      "writeAccess": "none",
      "attributes": {
        "authenticators": [
          {
            "type": {
              "type": "String",
              "required": true,
              "enum": [
                "otp",
                "totp",
                "apple",
                "google",
                "passkey",
                "password"
              ]
            },
            "id": {
              "type": "String",
              "readAccess": "none"
            },
            "code": {
              "type": "String",
              "readAccess": "none"
            },
            "secret": {
              "type": "String",
              "readAccess": "none"
            },
            "publicKey": {
              "type": "String",
              "readAccess": "none"
            },
            "counter": {
              "type": "Number",
              "readAccess": "none"
            },
            "verifiedAt": {
              "type": "Date",
              "readAccess": "none"
            },
            "expiresAt": {
              "type": "Date",
              "readAccess": "none"
            }
          }
        ],
        "authTokens": [
          {
            "jti": {
              "type": "String",
              "required": true
            },
            "expiresAt": {
              "type": "Date",
              "required": true
            },
            "lastUsedAt": {
              "type": "Date",
              "required": true
            },
            "userAgent": {
              "type": "String"
            },
            "ip": {
              "type": "String"
            },
            "country": {
              "type": "String"
            }
          }
        ],
        "mfaMethod": {
          "type": "String",
          "default": "none",
          "enum": [
            "none",
            "email",
            "totp",
            "sms"
          ]
        },
        "loginAttempts": {
          "type": "Number",
          "default": 0
        },
        "lastLoginAttemptAt": {
          "type": "Date"
        }
      }
    }
  },
  "onDelete": {
    "errorOnReferenced": {
      "except": [
        "AuditEntry"
      ]
    }
  },
  "search": {
    "fields": [
      "firstName",
      "lastName",
      "email",
      "phone"
    ]
  }
}
