{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "checkJs": false,
    "paths": {
      "helpers": [
        "./src/helpers/*"
      ],
      "components": [
        "./src/components/*"
      ],
      "screens": [
        "./src/screens/*"
      ],
      "docs": [
        "./src/docs/*"
      ],
      "utils": [
        "./src/utils/*"
      ],
      "layouts": [
        "./src/layouts/*"
      ],
      "stores": [
        "src/stores/*"
      ],
      "styles": [
        "./src/styles/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
