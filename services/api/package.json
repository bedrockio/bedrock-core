    "@kaareal/config": "^1.0.1",
    "@koa/cors": "^3.0.0",
    "@sentry/node": "^5.15.5",
    "@yeongjet/joi-to-json-schema": "^1.0.4",
    "bcrypt": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.11",
    "mongoose-autopopulate": "^0.12.2",
    "postmark": "^2.5.2",
    "snyk": "^1.359.1"
