{
  "name": "platform-api",
  "version": "1.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "start": "nodemon -w src -w openapi --exec \"MOCK_EMAIL=true NODE_ENV=dev node src/index.js\"",
    "start:production": "node src/index",
    "docs": "STORE_RESULT=true yarn run test && DOCS=true node scripts/openapi",
    "emails": "node emails/build",
    "lint": "eslint src",
    "test": "jest src --forceExit",
    "test:watch": "jest --watch -i src"
  },
  "dependencies": {
    "@google-cloud/storage": "^2.5.0",
    "@kaareal/config": "^0.1.1",
    "@koa/cors": "^3.0.0",
    "@sentry/node": "^5.2.0",
    "bcrypt": "^3.0.6",
    "joi": "14.3.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-body": "^4.0.8",
    "koa-logger": "3.2.0",
    "koa-router": "7.4.0",
    "lodash": "4.17.11",
    "mongoose": "^5.5.7",
    "postmark": "2.2.4"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^24.8.0",
    "joi-to-json-schema": "^5.0.0",
    "juice": "^5.2.0",
    "mongodb-memory-server": "^5.1.1",
    "nodemon": "^1.19.0",
    "pre-commit": "1.2.2",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.1",
    "supertest": "3.0.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/test-helpers/setup-tests.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 120
  },
  "volta": {
    "node": "12.16.3",
    "yarn": "1.22.4"
  }
}
